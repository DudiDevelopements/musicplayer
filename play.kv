<MusicPlayer>:
    #Botão de reproduzir
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .2}

        text: "Reproduzir"

        on_release: root.play_music()

    #Botão de parar
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .1}

        text: "Parar"

        on_release: root.stop_music()

    Label:
        text: 'Player de musica'
        font_size: '50dp'
        bold: True

    Label:
        text: 'By: Marcilio'
        font_size: '10dp'
        x: 0
        y: -30
