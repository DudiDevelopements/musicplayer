# -*- coding: utf-8 -*-
<MusicPlayer>:

############### Botões ###############

    # Botão de reproduzir
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .2}

        text: "Reproduzir"

        on_press: root.play_music()

    # Botão de parar
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .1}

        text: "Parar"

        on_press: root.stop_music()

    # Botão de voltar
    Button:
        size_hint: .15, .09
        pos_hint: {"center_x": .17, "center_y": .2}

        text: "Anterior"

        on_release: root.anterior()

    # Botão de avançar
    Button:
        size_hint: .15, .09
        pos_hint: {"center_x": .83, "center_y": .2}

        text: "Proxima"

        on_release: root.proxima()

    # Botão de salvar
    Button:
        size_hint: .15, .09
        pos_hint: {'center_x': .5, 'center_y': .3}

        text: "Salvar"

        on_release: root.salvaPathMusica()

############### Labels ###############

    Label:
        text: 'Player de musica'
        font_size: '50dp'
        bold: True
        color: 0, .5, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .54}

    Label:
        id: musica_text
        pos_hint: {'center_x': .5, 'center_y': .38}
        text: 'Nenhuma musica tocando no momento'

############### Text inputs ###############

    TextInput:
        id: musica_source
        pos_hint: {'center_x': .5 , 'center_y': .44}
        size_hint: .5, .05
        background_color: 0, .7, 1, 1
