# -*- coding: utf-8 -*-
<MusicPlayer>:
    music_text: musica_text
    #Botão de reproduzir
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .2}

        text: "Reproduzir"

        on_release: root.play_music()

    #Botão de parar
    Button:
        size_hint: .5, .09
        pos_hint: {"center_x": .5, "center_y": .1}

        text: "Parar"

        on_release: root.stop_music()

    #Botão de voltar
    Button:
        size_hint: .15, .09
        pos_hint: {"center_x": .17, "center_y": .2}

        text: "Anterior"

        on_release: root.anterior()

    #Botão de avançar
    Button:
        size_hint: .15, .09
        pos_hint: {"center_x": .83, "center_y": .2}

        text: "Proxima"

        on_release: root.proxima()

    #Label exibindo "Player de musica"
    Label:
        text: 'Player de musica'
        font_size: '50dp'
        bold: True
        color: 0, .5, 1, 1

    Label:
        id: musica_text
        pos_hint: {'center_x': .5, 'center_y': .43}
        text: 'Nenhuma musica tocando no momento'
